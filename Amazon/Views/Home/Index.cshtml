@{
    ViewData["Title"] = "Home Page";
}
@model BookListViewModel

<br />
<div>
    <h1 class="text-center" style="text-decoration: underline;">Available Books</h1>
</div>

<!--Used a container class to center the books in the page-->
<div class="container">
    <div class="text-center">
        @foreach (var x in Model.Books)
        {
            <!--Float left allows them to stack side by side into a total of 3 columns-->
            <div class="col-4 float-left text-center" style="border:groove; position: center; background-color:antiquewhite">
                <h5>@x.Title</h5>
                <div>
                    <!-- displays price in a badge pill-->
                    <span class="badge badge-pill badge-light m-1 p-2" style="float:right">
                        Only $@x.Price
                    </span>
                </div>
                <p>Book ID: @x.BookID</p>
                <p>Author: @x.Author</p>
                <p>Publisher: @x.Publisher</p>
                <p>ISBN: @x.ISBN</p>
                <p>Category: @x.ClassificationCategory</p>
                <p>Page Length: @x.PageLength</p>
            </div>
        }
    </div>
</div>

<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
<br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />

<!--center the page navigation bar-->
<div class="text-center">
    <!--align button to bottom of its column grid-->
    <div class="col-3 btn-group pull-right m-1 row align-items-end"
         page-model="@Model.PagingInfo"
         page-action="Index"
         page-classes-enabled="true"
         page-class="btn"
         page-class-normal="btn-outline-dark"
         page-class-selected="btn-dark">
    </div>
</div>